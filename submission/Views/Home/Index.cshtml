@{
    ViewData["Title"] = "Index";
}

<h1>Enter your Information</h1>
<hr class="my-4">
<div class="text-center">
    @model User
    <form asp-action="Create" asp-controller="Home" method="POST">
        <span class="text-danger" asp-validation-for="FirstName"></span>
        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="FirstName" name="FirstName" placeholder="Enter first name">
            </div>
        </div>
        <span class="text-danger" asp-validation-for="LastName"></span>
        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="LastName" name="LastName" placeholder="Enter Last name">
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Age"></span>
        <div class="form-group row">
            <label asp-for="Age" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="Age" name="Age" placeholder="Enter Age">
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Date"></span>
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="Date" name="Date" placeholder="Enter Date">
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Email"></span>
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter email address">
            </div>
        </div>
        <span class="text-danger" asp-validation-for="Password"></span>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Password" name="Password" placeholder="Enter password">
            </div>
        </div>
        <input class="btn btn-dark btn-lg float-right" value="Add User" type="submit">
    </form>
</div>
