@{
    ViewData["Title"] = "New";
}

<a class="float-right" href="/">Go Home</a>
<h1 style="text-decoration:underline">Add A New Trail</h1>
<div class="mt-5" style="width: 60%;">
    @model Trail
    <form action="/create" method="POST">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-3 col-form-label">Trail Name:</label>
            <div class="col-sm-9">
            <span class="text-danger" asp-validation-for="Name"></span>
                <input asp-for="Name" name="Name" type="text" class="form-control" id="Name" placeholder="Name">
            </div>
        </div>
        <div class="form-group row">
            <label for="Description" class="col-sm-3 col-form-label">Description:</label>
            <div class="col-sm-9">
                <span class="text-danger" asp-validation-for="Description"></span>
                <textarea  name="Description" asp-for="Description" type="text" class="form-control" id="Description"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="Distance" class="col-sm-3 col-form-label">Trail Distance:</label>
            <div class="col-sm-9">
                <span class="text-danger" asp-validation-for="Distance"></span>
                <input name="Distance" asp-for="Distance"  type="number" class="form-control" id="Distance" placeholder="Trail Distance">
            </div>
        </div>
        <div class="form-group row">
            <label for="Elevation" class="col-sm-3 col-form-label">Elevation Change:</label>
            <div class="col-sm-9">
                <span class="text-danger" asp-validation-for="Elevation"></span>
                <input name="Elevation" asp-for="Elevation"  type="number" class="form-control" id="Elevation" placeholder="Elevation">
            </div>
        </div>
        <div class="form-group row">
            <label for="Longitude" class="col-sm-3 col-form-label">Longitude:</label>
            <div class="col-sm-9">
                <span class="text-danger" asp-validation-for="Longitude"></span>
                <input name="Longitude" asp-for="Longitude" type="number" class="form-control" id="Longitude" placeholder="Longitude">
            </div>
        </div>
        <div class="form-group row">
            <label for="Latitude" class="col-sm-3 col-form-label">Latitude:</label>
            <div class="col-sm-9">
                <span class="text-danger" asp-validation-for="Latitude"></span>
                <input  name="Latitude" asp-for="Latitude" type="number" class="form-control" id="Latitude" placeholder="Latitude">
            </div>
        </div>
        <button type="submit" class="btn btn-dark btn-lg float-right">Create Record</button>
    </form>
</div>