@{
    ViewData["Title"] = "Dishes";
}

<a class="float-right" href="/dishes/new">Add a Dish </a>
<h1 class="text-center"><a href="/">Chefs</a> | Dishes</h1>
<h1 class="mt-5">Yum, take a look at our tasty dishes!</h1>
<div class="mt-5" style="border-bottom: 2px solid black; width: 60%;">
</div>
<table class="table table-striped table-hover mt-5">
    <thead>
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Calories</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var dish in @Model)
            {
                <tr>
                    <td>@dish.DishName</td>
                    <td>@dish.Creator.FirstName @dish.Creator.LastName</td>
                    <td>@dish.Tastiness</td>
                    <td>@dish.Calories</td>
                </tr>
            }
        }
    </tbody>
</table>
