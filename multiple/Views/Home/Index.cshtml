@model IndexModel
<div class="row">
    <div class="col-6">
        <h1>Registration</h1>
        <hr class="my-4">
        <form action="/registration" method="POST">
            <span class="text-danger" asp-validation-for="NewReg.FirstName"></span>
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input asp-for="NewReg.FirstName" type="text" class="form-control" id="FirstName" name="NewReg.FirstName" placeholder="Enter first name">
            </div>
            <span class="text-danger" asp-validation-for="NewReg.LastName"></span>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input asp-for="NewReg.LastName" type="text" class="form-control" id="LastName" name="LastName" placeholder="Enter last name">
            </div>
            <span class="text-danger" asp-validation-for="NewReg.Email"></span>
            <div class="form-group">
                <label for="Email">Email address</label>
                <input asp-for="NewReg.Email" type="text" class="form-control" id="Email" name="Email" placeholder="Enter email address">
            </div>
            <span class="text-danger" asp-validation-for="NewReg.Password"></span>
            <div class="form-group">
                <label for="Password">Password</label>
                <input asp-for="NewReg.Password" type="password" class="form-control" id="Password" name="Password" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="NewReg.Confirm"></span>
            <div class="form-group">
                <label for="Confirm">Password</label>
                <input asp-for="NewReg.Confirm" type="password" class="form-control" id="Confirm" name="Confirm" placeholder="Confirm password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-6">
        <h1>Login</h1>
        <hr class="my-4">
        <form action="login" method="POST">
            <span class="text-danger" asp-validation-for="NewLog.LoginEmail"></span>
            <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" id="LoginEmail" name="NewLog.LoginEmail" placeholder="Enter email address">
            </div>
            <span class="text-danger" asp-validation-for="NewLog.LoginPassword"></span>
            <div class="form-group">
                <label asp-for="NewLog.LoginPassword">Password</label>
                <input type="password" class="form-control" id="LoginPassword" name="NewLog.LoginPassword" placeholder="Enter password">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>