@model Login
<form action="login" method="POST">
  <span class="text-danger" asp-validation-for="LoginEmail"></span>
    <div class="form-group">
        <label>Email address</label>
        <input type="email" class="form-control" id="LoginEmail" name="LoginEmail" placeholder="Enter email address">
    </div>
    <span class="text-danger" asp-validation-for="LoginPassword"></span>
    <div class="form-group">
        <label asp-for="LoginPassword">Password</label>
        <input type="password" class="form-control" id="LoginPassword" name="LoginPassword" placeholder="Enter password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>