@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @model Dojo
    <h1 class="display-4">Dojo Survey</h1>
    <div class="jumbotron">
      <form action="/survey" method="POST">
        <span class="text-danger" asp-validation-for="Name"></span>
        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Name:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" asp-for="Name" placeholder="Enter name">
          </div>
        </div>
        <span class="text-danger" asp-validation-for="Location"></span>
        <div class="form-group row">
          <label for="location" class="col-sm-2 col-form-label">Dojo Location:</label>
          <div class="col-sm-10">
            <select class="form-control" asp-for="Location">
              <option value=""></option>
              <option value="San Jose">San Jose</option>
              <option value="Berkeley">Berkeley</option>
              <option value="Orange County">Orange County</option>
              <option value="Los Angeles">Los Angeles</option>
            </select>
          </div>
        </div>
        <span class="text-danger" asp-validation-for="Language"></span>
        <div class="form-group row">
          <label for="language" class="col-sm-2 col-form-label">Language:</label>
          <div class="col-sm-10">
            <select class="form-control" asp-for="Language">
              <option value=""></option>
              <option value="Python">Python</option>
              <option value="JavaScript">JavaScript</option>
              <option value="C Sharp">C Sharp</option>
              <option value="java">Java</option>
            </select>
          </div>
        </div>
        <span class="text-danger" asp-validation-for="Comment"></span>
        <div class="form-group">
          <label for="comment">Comment</label>
          <textarea class="form-control" id="comment" asp-for="Comment" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-dark btn-lg float-right">Submit</button>
      </form>
    </div>
</div>
